<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="UTF-8">
    <title>ADMIN - Panel Sterowania</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body { background-color: #f4f4f4; }
        .card { transition: 0.2s; border-left: 5px solid #007bff; }
        .card:hover { transform: scale(1.01); box-shadow: 0 4px 8px rgba(0,0,0,0.1);}
        .admin-section-header { border-bottom: 2px solid #343a40; margin-bottom: 20px; padding-bottom: 10px; }
        .building-tag {
            display: flex;
            align-items: center;
            padding: 5px 10px;
            background-color: #e9ecef;
            border-radius: 20px;
            font-size: 0.85rem;
        }
        .building-tag .remove-btn {
            margin-left: 8px;
            cursor: pointer;
            color: #dc3545;
            font-weight:  bold;
        }
        .building-tag:hover {
            background-color: #dee2e6;
        }
        .log-container {
            max-height: 400px;
            overflow-y: auto; 
            border: 1px solid #ddd;
            border-radius: 8px;
            background: white;
        }
        .log-item {
            border-bottom: 1px solid #eee;
            padding: 10px;
            font-size: 0.9rem;
        }
        .log-item:last-child { border-bottom: none; }
        .log-critical { background-color: #fff5f5; border-left: 5px solid #dc3545;}
    </style>
</head>
<body>

    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <span class="navbar-brand">ADMIN PANEL GŁÓWNA</span>
            <a href="/logout" class="btn btn-outline-danger btn-sm"><i class="bi bi-box-arrow-right"></i> Wyloguj</a>
        </div>
    </nav>

    <div class="card mb-3 shadow-sm border-0 bg-white" style="max-width: 350px; position: sticky; top: 10px; z-index: 1000; margin-left: 15px; margin-top: 20px;">
        <div class="card-body d-flex align-items-center p-2">
            <div class="flex-shrink-0">
                <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white" style="width: 40px; height: 40px;">
                    <i class="bi bi-person-badge fs-4"></i>
                </div>
            </div>
            <div class="flex-grow-1 ms-3">
                <h6 class="mb-0 fw-bold"><%= currentUser.name %> <%= currentUser.surname %></h6>
                <small class="text-muted" style="font-size: 0.75rem;">
                    <i class="bi bi-envelope me-1"></i><%= currentUser.email %>
                </small>
            </div>
            <div class="ms-2">
                <span class="badge bg-success-subtle text-success border border-success-subtle rounded-pill text-capitalize" style="font-size: 0.65rem;"><%= currentUser.role %></span>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <h2 class="mb-4">Zarządzanie Systemem</h2>

        <div class="d-flex justify-content-between align-items-center admin-section-header">
            <h4>Zarządzanie budynkami</h4>
            <button type="button" class="btn btn-success mb-4" data-bs-toggle="modal" data-bs-target="#buildingModal" data-mode="create">
                <i class="bi bi-building-fill-add me-2"></i>Dodaj Budynek
            </button>
        </div>

        <div class="row g-3 mb-5">
    <% if (buildings && buildings.length > 0) { %>
        <% buildings.forEach(building => { %>
            <div class="col-md-6 col-lg-4">
                <div class="card p-3 mb-3 h-100 shadow-sm">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div style="max-width: 70%;">
                            <h5 class="mb-1 text-truncate" title="<%= building.name %>">
                                <i class="bi bi-buildings-fill text-success"></i><%= building.name %>
                            </h5>
                            <div class="text-muted small">
                                <i class="bi bi-geo-alt"></i> <%= building.address %>
                            </div>

                            <% if (building.description) { %>
                                <div class="small mt-2 test-secondary" style="line-height: 1.4;">
                                    <%= building.description %>
                                </div>
                            <% } %>
                        </div>

                        <div class="d-flex flex-column align-items-end gap-1">
                            <span class="badge <%= building.status === 'active' ? 'bg-success' : 'bg-secondary' %>" style="font-size: 0.7rem; min-width: 85px;">
                                <i class="bi <%= building.status === 'active' ? 'bi-check-circle' : 'bi-archive' %>"></i>
                                <%= building.status === 'active' ? 'Aktywny' : 'Zarchiwizowany' %>
                            </span>
                        </div>
                    </div>

                    <div class="btn-group w-100 mt-auto">
                        <button type="button" 
                                class="btn btn-warning btn-sm" 
                                data-bs-toggle="modal" 
                                data-bs-target="#buildingModal"
                                data-mode="edit"
                                data-id="<%= building.id %>"
                                data-name="<%= building.name %>"
                                data-address="<%= building.address %>"
                                data-description="<%= building.description %>">
                            <i class="bi bi-pencil-square me-1"></i> Edytuj
                        </button>

                        <a href="/admin/buildings/toggle-status/<%= building.id %>/<%= building.status %>"
                            class="btn <%= building.status === 'active' ? 'btn-outline-secondary' : 'btn-outline-success' %> btn-sm d-flex align-items-center justify-content-center">
                            <% if (building.status === 'active') { %>
                                <i class="bi bi-archive me-1"></i> Archiwizuj
                            <% } else { %>
                                <i class="bi bi-arrow-counterclockwise me-1"></i> Przywróć
                            <% } %>
                        </a>
                    </div>
                </div>
            </div>
        <% }) %>
    <% } else { %>
        <div class="col-12">
            <div class="alert alert-info text-center">
                Brak zarejestrowanych budynków w bazie danych.
            </div>
        </div>
    <% } %>
</div>
    <div>
        <div class="d-flex justify-content-between align-items-center admin-section-header">
            <h4>Zarządzanie użytkownikami</h4>
            <button type="button" class="btn btn-success mb-4" data-bs-toggle="modal" data-bs-target="#createUserModal">
                <i class="bi bi-person-plus-fill me-2"></i>Dodaj Użytkownika
            </button>
        </div>

        <div class="row g-3">
            <% if (users && users.length > 0) { %>
                <% users.forEach(u => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card p-3 mb-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                 <div>
                                    <strong><i class="bi bi-people-fill text-primary"></i><%= u.name %> <%= u.surname %></strong>
                                    <div class="text-muted small"><%= u.email %></div>
                                </div>
        
                                <div class="d-flex flex-column align-items-end gap-1">
                                    <span class="badge bg-primary" style="font-size: 0.7rem;">
                                        <%= u.role.toUpperCase() %>
                                    </span>
                                    <span class="badge <%= u.status === 'active' ? 'bg-success' : 'bg-danger' %>" style="font-size: 0.7rem;">
                                         <%= u.status === 'active' ? 'Aktywny' : 'Zablokowany' %>
                                    </span>
                                </div>
                            </div>

                            <div class="btn-group w-100 mt-2">
                                <button type="button" 
                                        class="btn btn-warning btn-sm" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#createUserModal"
                                        data-mode="edit"
                                        data-id="<%= u.id %>"
                                        data-name="<%= u.name %>"
                                        data-surname="<%= u.surname %>"
                                        data-email="<%= u.email %>"
                                        data-role="<%= u.role %>">
                                    <i class="bi bi-pencil-square me-1"></i>Edytuj
                                </button>
        
                                <a href="/users/toggle-status/<%= u.id %>/<%= u.status %>" 
                                    class="btn <%= u.status === 'active' ? 'btn-outline-danger' : 'btn-outline-success' %> btn-sm">
                                    <% if (u.status === 'active') { %>
                                        <i class="bi bi-archive me-1"></i> Zablokuj
                                    <% } else { %>
                                        <i class="bi bi-arrow-counterclockwise me-1"></i> Odblokuj
                                    <% } %>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>Brak zarejestrowanych użytkowników.</p>
            <% } %>
        </div>
    </div>

    <div class="card border-info mb-3">
        <div class="card-body">
            <h5 class="card-title text-info"><i class="bi bi-eye"></i> Tryb Podglądu</h5>
            <p class="card-text">Przeglądaj domyślne i piętro jako zarządca, bez uprawnień do edycji.</p>
            <a href="/buildings?viewAs=admin" class="btn btn-primary">
                <i class="bi bi-eye"></i> Podgląd budynków (Tryb Admina)
            </a>
        </div>
    </div>

    <div class="admin-section-header mt-5">
        <h3><i class="bi bi-activity"></i> Najnowsze zdarzenia związane z czujnikami</h3>
    </div>

    <div class="log-container shadow-sm">
        <table class="table table-sm table-hover mb-0">
            <thead class="table-dark sticky-top">
                <tr>
                    <th>Czas</th>
                    <th>Czujnik</th>
                    <th>Znaczenie</th>
                    <th>Budynek</th>
                </tr>
            </thead>
            <tbody>
                <% if (sensorLogs && sensorLogs.length > 0) { %>
                    <% sensorLogs.forEach(log => { %>
                        <tr class="<%= log.is_critical ? 'table-danger' : '' %>">
                            <td><small><%= new Date(log.created_at).toLocaleTimeString() %></small></td>
                            <td><strong><%= log.sensor_name %></strong></td>
                            <td>
                                <% if (log.is_critical) { %>
                                    <span class="badge bg-danger"><i class="bi bi-exclamation-triangle"></i> <%= log.value %></span>
                                <% } else { %>
                                    <span><%= log.value %></span>
                                <% } %>
                            </td>
                            <td><small><%= log.building_name %></small></td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="4" class="text-center text-muted py-3">Nie ma jeszcze żadnych wydarzeń</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <div class="modal fade" id="buildingModal" tabindex="-1" aria-labelledby="buildingModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title" id="buildingModalLabel">Building Info</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <form id="buildingForm" action="/admin/buildings/add" method="POST">
                    <input type="hidden" name="id" id="editBuildingId">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Name</label>
                            <input type="text" name="name" id="editBuildingName" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Address</label>
                            <input type="text" name="address" id="editBuildingAddress" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Description</label>
                            <textarea name="description" id="editBuildingDesc" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="deleteBuildingBtn" class="btn btn-danger me-auto">
                            <i class="bi bi-trash"></i> Delete building
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abort</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="createUserModal" tabindex="-1" aria-labelledby="createUserModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header bg-dark text-white">
                    <h5 class="modal-title" id="createUserModalLabel">User Data</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <form id="userForm" action="/admin/users/create" method="POST">
                    <input type="hidden" name="id" id="editUserId"> <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label>Name</label>
                                <input type="text" name="name" id="editUserName" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Surname</label>
                                <input type="text" name="surname" id="editUserSurname" class="form-control" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label>Email</label>
                            <input type="email" name="email" id="editUserEmail" class="form-control" required>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold" id="passwordLabel">Password</label>
                                <input type="password" name="password" id="userPassword" class="form-control">
                                <small class="text-muted" id="passwordHint" style="display: none;">
                                    Keep clear to no change
                                </small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label>Role</label>
                                <select name="role" id="editUserRole" class="form-select">
                                    <option value="user">User</option>
                                    <option value="manager">Manager</option>
                                    <option value="admin">Admin</option>
                                </select>
                            </div>
                            <div id="managerBuildingsSection" style="display: none;" class="mt-3 border-top pt-3">
                                <label class="form-label fw-bold">Zarządzanie budynkami</label>
    
                                <div class="input-group mb-2">
                                    <select id="buildingSelect" class="form-select form-select-sm">
                                        <option value="">Wybierz budynek...</option>
                                        <% buildings.forEach(b => { %>
                                            <option value="<%= b.id %>"><%= b.name %></option>
                                        <% }) %>
                                    </select>
                                    <button type="button" class="btn btn-primary btn-sm" onclick="assignBuilding()">Dodaj</button>
                                </div>

                                <div id="buildingsContainer" class="d-flex flex-wrap gap-2 py-2">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <a href="#" id="deleteUserBtn" class="btn btn-danger me-auto">
                            <i class="bi bi-trash"></i> Delete Account
                        </a>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Abort</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const bldgModal = document.getElementById('buildingModal');
        const deleteBldgBtn = document.getElementById('deleteBuildingBtn');
        const bldgForm = document.getElementById('buildingForm');
        let currentBldgId = null;

        bldgModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const mode = button.getAttribute('data-mode');

            if (mode === 'edit') {
                currentBldgId = button.getAttribute('data-id');
                document.getElementById('buildingModalLabel').innerHTML = '<i class="bi bi-pencil-square me-2"></i>Edit Building';

                document.getElementById('editBuildingId').value = currentBldgId;
                document.getElementById('editBuildingName').value = button.getAttribute('data-name');
                document.getElementById('editBuildingAddress').value = button.getAttribute('data-address');
                document.getElementById('editBuildingDesc').value = button.getAttribute('data-description');

                bldgForm.action = '/admin/buildings/edit';
                deleteBldgBtn.style.display = 'block';
            } else {
                currentBldgId = null;
                bldgForm.reset();
                document.getElementById('buildingModalLabel').innerHTML = '<i class="bi bi-building-fill me-2"></i>Add New Building';
                bldgForm.action = '/admin/buildings/add';
                deleteBldgBtn.style.display = 'none';
            }
        });

        deleteBldgBtn.addEventListener('click', function() {
            if (!currentBldgId) return;

            Swal.fire({
                title: 'Are you sure?',
                text: "All floors and rooms in this building will be deleted!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete building!',
                cancelButtonText: 'Abort',
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '/admin/buildings/delete/' + currentBldgId;
                }
            });
        });
    });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
    document.addEventListener('DOMContentLoaded', function() {
        const userModal = document.getElementById('createUserModal');
        const deleteBtn = document.getElementById('deleteUserBtn');
        const form = document.getElementById('userForm');

        const roleSelect = document.getElementById('editUserRole');
        const buildingsSection = document.getElementById('managerBuildingsSection');

        let currentUserId = null;

        function toggleBuildings() {
            if (roleSelect.value === 'manager') {
                buildingsSection.style.display = 'block';
            } else {
                buildingsSection.style.display = 'none';
            }
        }

        roleSelect.addEventListener('change', toggleBuildings);
    
        userModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const mode = button.getAttribute('data-mode');
            
            const label = document.getElementById('passwordLabel');
            const passInput = document.getElementById('userPassword');
            const hint = document.getElementById('passwordHint');

            if (mode === 'edit') {
                currentUserId = button.getAttribute('data-id');

                document.getElementById('createUserModalLabel').innerHTML = '<i class="bi bi-pencil-square me-2"></i>Edytuj użytkownika';
                document.getElementById('editUserId').value = button.getAttribute('data-id');
                document.getElementById('editUserName').value = button.getAttribute('data-name');
                document.getElementById('editUserSurname').value = button.getAttribute('data-surname');
                document.getElementById('editUserEmail').value = button.getAttribute('data-email');
                document.getElementById('editUserRole').value = button.getAttribute('data-role');

                label.innerText = 'New Password';
                hint.style.display = 'block';
                passInput.required = false;
                form.action = '/users_list/edit';

                deleteBtn.style.display = 'block';

                toggleBuildings();
                if (roleSelect.value === 'manager') {
                    loadManagerBuildings(currentUserId);
                }

            } else {
                currentUserId = null;
                form.reset();
                document.getElementById('createUserModalLabel').innerHTML = '<i class="bi bi-person-plus-fill me-2"></i>Utwórz nowego użytkownika';
                document.getElementById('editUserId').value = '';

                deleteBtn.style.display = 'none';
                label.innerText = 'Password';
                hint.style.display = 'none';
                passInput.required = true;
                form.action = '/admin/users/create';

                toggleBuildings();
            }
        });

        deleteBtn.addEventListener('click', function() {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Abort'
            }).then((result) => {
                if (result.isConfirmed && currentUserId) {
                    window.location.href = '/users/delete/' + currentUserId;
                }
            })
        })
    });

    async function loadManagerBuildings(userId) {
        const container = document.getElementById('buildingsContainer');
        if (!container) return;
        container.innerHTML = '<small class="text-muted">Ladowanie</small>';

        try {
            const response = await fetch(`/admin/manager_buildings/${userId}`);
            const buildings = await response.json();

            console.log(buildings);

            container.innerHTML = '';

            if (buildings.length === 0) {
                container.innerHTML = '<small class="text-muted">Brak przypisanych budynków</small>';
                return;
            }

            buildings.forEach(b => {
                const span = document.createElement('span');
                span.className = 'badge bg-light text-dark border d-flex align-items-center gap-2';
                span.style.borderRadius = '15px';
                span.innerHTML = `
                    ${b.name}
                    <i class="bi bi-x-circle-fill text-danger pointer" onclick="detachBuilding(${userId}, ${b.id})"></i>
                `;
                container.appendChild(span);
            });
        } catch (err) {
            container.innerHTML = '<small class="text-danger">Blad ladowania</small>';
        }
    }

    async function assignBuilding() {
        const userId = document.getElementById('editUserId').value;
        const buildingId = document.getElementById('buildingSelect').value;
        if (!buildingId || !userId) return alert("Wybierz budynek!");

        try {
            const response = await fetch(`/admin/manager_buildings/assign`, {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ userId, buildingId })
            });
            if (response.ok) loadManagerBuildings(userId);
        } catch (err) { console.error(err); }
    }

    async function detachBuilding(userId, buildingId) {
        try {
            const response = await fetch(`/admin/manager_buildings/detach/${userId}/${buildingId}`, {
                method: 'DELETE'
            });
            if (response.ok) loadManagerBuildings(userId);
        } catch (err) { console.error(err); }
    }
</script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>